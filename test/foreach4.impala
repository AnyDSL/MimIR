/*
foreach without an explicit scope
expected result: 45
*/
fn count(n : int, yield : fn(int, fn()), ret : fn()) {
    fn loop(i : int) {
        if (i < n)
            yield(i, || { loop(i+1); });
        else
            ret();
    }
    loop(0);
}

fn main(n : int) -> int {
    let mut b : int = 0;
    foreach count(10) |x : int| -> void {
        b += x;
    }
    return b;
}
