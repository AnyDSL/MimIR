extern nvvm(int, fn() -> void) -> void;

fn run_on_gpu(size : int, body : fn(int) -> void) -> void {
    nvvm(size, || -> void {
        let index = nvvm_read_ptx_sreg_tid_x() + nvvm_read_ptx_sreg_ntid_x() * nvvm_read_ptx_sreg_ctaid_x();
        body(index);
    });
}

fn run_on_gpu_advanced(size : int, body : fn(int) -> void) -> void {
    nvvm(size, || -> void {
        let tid_x = nvvm_read_ptx_sreg_tid_x() + nvvm_read_ptx_sreg_ntid_x() * nvvm_read_ptx_sreg_ctaid_x();
        let tid_y = nvvm_read_ptx_sreg_tid_y() + nvvm_read_ptx_sreg_ntid_y() * nvvm_read_ptx_sreg_ctaid_y();
        let index1 = (tid_y*2+0) * 2048 + tid_x;
        let index2 = (tid_y*2+1) * 2048 + tid_x;
        body(index1);
        body(index2);
    });
}

