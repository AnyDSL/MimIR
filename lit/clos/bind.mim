// RUN: rm -f %t.ll
// RUN: %mim -p clos %s --output-ll %t.ll
// RUN: clang %S/../lib.c %t.ll -o %t -Wno-override-module
// RUN: %t | FileCheck %s

plugin mem;
plugin core;

let pb_type = Cn [%mem.M 0, Cn [%mem.M 0]];
let size    = 100;

ccon println_i32 [mem: %mem.M 0, val: I32, return : Cn [%mem.M 0]];

con recursive [mem: %mem.M 0, i : I32, last_pullback: pb_type, return: Cn [%mem.M 0]] =
    let condition = %core.icmp.ul (i, %core.bitcast I32 size);
    (exit, loop_body)#condition mem
    where
        con loop_body [mem: %mem.M 0] =
            println_i32( mem, i , next )
            where
                con next [mem: %mem.M 0] =
                    recursive( mem, %core.wrap.add 0 (i, 1I32), pb, return )
                    where
                        con pb [mem: %mem.M 0, return: Cn [%mem.M 0]] =
                            println_i32( mem, i , next )
                            where
                                con next [mem: %mem.M 0] = last_pullback (mem, return);
                            end;
                    end;
            end;

        con exit [mem: %mem.M 0] = last_pullback ( mem, return );
    end;

con outer [mem: %mem.M 0, x : I32, return : Cn [%mem.M 0]] =
    recursive ( mem, 0I32, end_, return )
    where
        con end_ [mem: %mem.M 0, return : Cn [%mem.M 0]] = return mem;
    end;

con extern main [mem: %mem.M 0, argc: I32, argv : %mem.Ptr («⊤:Nat; %mem.Ptr («⊤:Nat; I8», 0)», 0), return : Cn [%mem.M 0, I32]] =
    outer(mem, 1I32, callback)
    where
        con callback (mem: %mem.M 0) = return (mem, 0I32);
    end;

