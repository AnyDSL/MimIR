        return (mem, acc)
    };

    .cn for_body [i : %Int 4294967296, acc : %Int 4294967296, continue : .Cn [%Int 4294967296]] = {
        continue (%core.wrap.add (0:.Nat, 4294967296:.Nat) (i, acc))
