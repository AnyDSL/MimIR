.plugin core;

.con .extern main(mem: %mem.M, argc: .I32, argv: %mem.Ptr («⊤:.Nat; %mem.Ptr («⊤:.Nat; .I8», 0)», 0), return: .Cn [%mem.M, .I32]) =
    .let Tas             = (.I32, 0);
    .let (`mem, ptr)     = %mem.mslot Tas (mem, 4, 0);
    .let `mem            = %mem.store (mem, ptr, argc);
    .let ld::(`mem, val) = %mem.load (mem, ptr);
    return ld;

