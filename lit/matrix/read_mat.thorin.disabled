// RUN: rm -f %t.ll ; \
// RUN: %thorin -d matrix -e thorin %s -e ll -o %t | FileCheck %s
// RUN: clang %t.ll -o %t -Wno-override-module

.import core;
.import mem;
.import matrix;

.let _32 = 4294967296;
.let I32 = .Idx _32;

.con .extern f [mem : %mem.M, 
    [k:.Nat, l:.Nat],
    M:%matrix.Mat (2,(k,l),I32),
    return: .Cn[%mem.M, I32]] = {

    .let two = %core.conv.u2u (k,_32) (2:I32);
    .let three = %core.conv.u2u (l,_32) (3:I32);

    .let (mem2,a) = %matrix.read
        (2, (k,l), I32)
        (
            mem,
            M,
            (two,three)
        );

    return (mem2, a)
};
