// RUN: rm -f %t.ll
// RUN: %thorin %s --output-ll %t.ll -o - | FileCheck %s

.import core;
.import compile;
.import opt;

.con f [mem : %mem.M, a : .I32, return : .Cn [%mem.M, .I32]] =
    return (mem, a);

.con .extern main [mem : %mem.M, argc : .I32, argv : %mem.Ptr (%mem.Ptr (.I8, 0), 0), return : .Cn [%mem.M, .I32]] =
    f (mem, 42I32, return);

// CHECK-DAG: .con return
// CHECK-DAG: return{{.*}}42
