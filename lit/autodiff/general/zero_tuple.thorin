// RUN: rm -f %t.ll
// RUN: %thorin %s --output-ll %t.ll -o - | FileCheck %s

.plugin core;
.plugin direct;
.plugin autodiff;


.con .extern main [mem : %mem.M, argc : .I32, argv : %mem.Ptr (%mem.Ptr (.I8, 0), 0), return : .Cn [%mem.M, .I32]] = {

    .let t = %autodiff.zero [.I32,.I32];
    .let c = t#(0:(.Idx 2));
    return (mem,c)
};


