// RUN: rm -f %t.ll ; \
// RUN: %thorin %s --output-ll %t.ll -o - | FileCheck %s

.import core;
.import mem;

.let I32 = .Idx 4294967296;

.lam f [a:I32] -> I32 = {
    .let b = %core.wrap.mul 0 (2:I32, a);
    b
};

.con .extern main [mem : %mem.M, argc : I32, argv : %mem.Ptr (%mem.Ptr (.Idx 256, 0), 0), return : .Cn [%mem.M, I32]] = {

    .con ret_cont r::[I32] = {
        return (mem, r)
    };

    .let c = (42:I32);
    .let r = f c;
    ret_cont r
};

