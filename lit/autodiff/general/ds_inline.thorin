// RUN: rm -f %t.ll ; \
// RUN: %thorin %s --output-ll %t.ll -o - | FileCheck %s

.plugin core;

.let I32 = %core.I32;

.lam f [a:%core.I32] -> I32 = {
    .let b = %core.wrap.mul 0 (2:%core.I32, a);
    b
};

.con .extern main [mem : %mem.M, argc : I32, argv : %mem.Ptr (%mem.Ptr (%core.I8, 0), 0), return : .Cn [%mem.M, I32]] = {

    .con ret_cont r::[I32] = {
        return (mem, r)
    };

    .let c = (42:%core.I32);
    .let r = f c;
    ret_cont r
};

