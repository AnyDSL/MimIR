// RUN: rm -f %t.ll
// RUN: %thorin %s --output-ll %t.ll -o - | FileCheck %s

.plugin core;
.plugin direct;


.lam f(a :.I32): .I32 = %core.wrap.add 0 (2:.I32, a);

.fun .extern main(mem: %mem.M, argc: .I32, argv: %mem.Ptr (%mem.Ptr (.I8, 0), 0)): [%mem.M, .I32] =
    .let c = f 40:.I32;
    return (mem, c);

