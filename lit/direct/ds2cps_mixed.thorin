// RUN: rm -f %t.ll
// RUN: %thorin %s --output-ll %t.ll -o - | FileCheck %s

.plugin core;
.plugin direct;


.lam f(a :.I32): .I32 = %core.wrap.add 0 (2:.I32, a);

.fun h(mem: %mem.M, a: .I32): [%mem.M, .I32] =
    return (mem, f a);

.fun .extern main(mem: %mem.M, argc: .I32, argv: %mem.Ptr0 (%mem.Ptr0 .I8)): [%mem.M, .I32] =
    h ((mem, 40:.I32), return);

// CHECK-DAG: return{{.*}}42
